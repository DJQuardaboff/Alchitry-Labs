module pull_down #(
    SIZE = 1 : SIZE > 0
  )(
    input clk,  // clock
    inout in[SIZE],
    output out[SIZE]
  ) {
  
  .clk(clk) {
    dff flip[4];
    dff saved[SIZE];
  }
  
  always {
    flip.d = flip.q + 1;
    in.write = 0;
    in.enable = SIZEx{flip.q == 0};
    if (flip.q > 2)
      saved.d = in.read;
    out = saved.q;
  }
}